function ChooseCoupons(req) {
    var data = req.dataObject;
    var ChooseCouponsList = "";
    for (var i = 0; i < data.length; i++) {
        var limitation = '',
            state = '';
        var contents = data[i].covaActivityName;
        //电桩限制
        if(data[i].covaLimitation == 1){
            limitation = '仅限交流充电桩';
        }else if(data[i].covaLimitation == 2){
            limitation = '仅限直流充电桩';
        }else if(data[i].covaLimitation == 3){
            limitation = '不限充电桩';
        }
        //状态
        if(data[i].covaStutas == 0){
            state = '已上架'
        }else if(data[i].covaStutas == 1){
            state = '已下架'
        }
        ChooseCouponsList += '<tr><td><input type="checkbox" class="selectedBox" name="exchangeIds" data-value="'+data[i].pkCouponVariety+'" data-cp="'+data[i].pkCouponVariety+'" data-content="'+contents+'"></td><td>'+data[i].covaActivityName+'</td><td>' + limitation + '</td><td>' + data[i].covaCouponValue + '</td><td>满' + data[i].covaCouponCondition + '元可用</td><td>' + state + '</td></tr>';
    }

    $("#ChooseCouponsTbody").html(ChooseCouponsList);
}
