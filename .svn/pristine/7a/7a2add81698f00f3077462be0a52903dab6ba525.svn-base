//确定按钮回调
function selectExchangeCallback() {
    var selectExchangeTr = "";
    var arr = [];
    var b = 0;
    $('input[name="exchangeIds"]:checked').each(function () {
        var ExchangeData = $(this).attr('data-value');
        var cpId = $(this).attr('data-cp');
        var contents = $(this).attr('data-content');
        selectExchangeTr += '<tr data-cp = "'+cpId+'" data-value="'+ExchangeData+'" data-param="" data-content="'+contents+'"><td>'
            + $(this).parent().parent().find("td:eq(1)").text() + '</td><td>'
            + '关闭</td><td>'
            + '</td><td>'
            + '0</td><td>'
            + '<a style="padding: 10px;" onclick="IntegralEditing(this);">积分编辑</a></td></tr>'

        arr[b] = $(this).val();
        b++;
    });

    $("#myTbogy").append(selectExchangeTr);
}

//停止兑换按钮
function stopExchange(obj){
    var index = obj.parentNode.parentNode.rowIndex - 1;
    var day = $('#myTbogy tr:eq('+index+') td:eq(2)').text();
    var cpId = parseInt($('#myTbogy tr:eq('+index+')').attr('data-cp')),
        integralValue = parseInt($('#myTbogy tr:eq('+index+') td:eq(3)').text()),
        map = {couponVarietyId: cpId,integralValue:integralValue};
    var data = {
        'pkId' : 6,
        'integralRulesId' : $('#myTbogy tr:eq('+index+')').attr('data-value'),
        'activityStatus' : 1,
        'direction' : 1,
        'map' : map,
        'strStartDate' : slice_date(day)[0],
        'strEndDate' : slice_date(day)[1],
        'contents' : $('#myTbogy tr:eq('+index+')').attr('data-content')
    };
    $.ajax({
        url: basePath + modifyIntegralActivityUrl,
        type: "post",
        dataType: 'json',
        data: data,
        success: function (data) {
            layer.open({
                type: 1,
                offset: '100px',
                title: ["提示", "font-size:12px;text-align:left;padding-left:20px;"],
                shadeClose: false,
                closeBtn: 1,
                area: ['310px', '160px'],
                //宽高
                content: data.msg,
                time: 0,
                btn: ["确定"],
                btn1: function(indexs, layero) {
                    layer.closeAll();
                    window.location.reload();
                },
                cancel: function(indexs, layero) {
                    layer.closeAll();
                    window.location.reload();
                }
            });
        }
    });
}

