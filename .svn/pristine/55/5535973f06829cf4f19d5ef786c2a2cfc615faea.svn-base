            <if test="userAccount!=null">and a.user_account like concat('%',#{userAccount},'%')</if>
            <if test="adminName!=null">and ua.admin_name like concat('%',#{adminName},'%')</if>
        </where>
        group by a.user_id
        ) b
    </select>

