        SELECT count(1)
        FROM
        tbl_user_normal_view a
        WHERE
        a.user_leval = '6'
        and a.user_status = '1'
        <if test="normRealName!=null and normRealName!=''">and a.norm_real_name like concat('%',#{normRealName},'%')
