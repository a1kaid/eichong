@r:50rem;
a,
input,
button {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
input,
button {
  -webkit-appearance: none;
  border-radius: 0;
}
body {
  margin:0;
  -webkit-user-select:auto;
  background-color: #ebebeb;
}
body * {
  -webkit-user-select:auto;
  font-family:  "微软雅黑";
}
body {
  -webkit-text-size-adjust: 100%;
  font-family:  "微软雅黑";
}
*{
  padding: 0;
  margin: 0;
}
.main{
  width: 670/@r;
  min-height: 100/@r;
  padding: 60/@r 40/@r;
  .intro{
    .chargeTitle{
      font-size: 32/@r;
      color: #333333;
    }
    .chargeContent{
      font-size: 28/@r;
      color: #666666;
      margin: 44/@r 0;
    }
  }
  .chargeStep{
    p{
      height: 68/@r;
      width: 670/@r;
      font-size: 28/@r;
      color: #333333;
    }
    img{
      display: block;
      width: 670/@r;
      height: 250/@r;
      margin: 0 auto 40/@r;
    }
  }
  .tip{
    width: 670/@r;
    height: 100/@r;
    font-size: 26/@r;
    color: #888888;
  }
}
