@r:50rem;
a,
input,
button {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
input,
button {
  -webkit-appearance: none;
  border-radius: 0;
}
body {
  margin:0;
  -webkit-user-select:auto;
  font-family: "微软雅黑";
}
body * {
  -webkit-user-select:auto;
  font-family:  Helvetica;
}
body {
  -webkit-text-size-adjust: 100%;
}
html,body{
  width: 100%;
  height: 100%;
}
.mainContent{
  width: 100%;
}

.layui-m-layerbtn span[yes] {
  color: #ff7d00 !important;
}
.layui-m-layerbtn span[no] {
    border-right: 1px solid #ff7d00 !important;
    border-radius: 0 0 0 5px;
    color: #ff7d00 !important;
}
.layui-m-layerbtn {
  display: box;
  display: -moz-box;
  display: -webkit-box;
  width: 100%;
  height: 64/@r !important;
  line-height: 64/@r !important;
  font-size: 0;
  border-top: 1px solid #D0D0D0;
  background-color: #F2F2F2;
  padding: 8px 0 !important;
}
.layui-m-layerbtn span {
  display: block;
  -moz-box-flex: 1;
  box-flex: 1;
  -webkit-box-flex: 1;
  font-size: 34/@r !important;
  cursor: pointer;
  width: 50% !important;
}

.end{
  margin: 0;
  padding: 20/@r;
  color:#ff7d00 !important;
  font-size: 34/@r;
}
.endTip{
  margin: 0 !important;
  padding: 0 !important;
  color:#333333 !important;
  font-size: 30/@r;
  line-height: 40/@r;
}
.chargingTip{
  margin: 0 !important;
  padding: 60/@r 0 !important;
  color:#000000 !important;
  font-size: 34/@r;
  line-height: 40/@r;
}
.guyStyle{
  margin: 0 !important;
  padding: 0 !important;
  color:#333333 !important;
  font-size: 36/@r;
  line-height: 60/@r;
}
.layui-m-layer0 .layui-m-layerchild {
  width: 80% !important;
  max-width: 640/@r;
}
.layui-m-layercont {
  padding: 30/@r 40/@r !important;
  line-height: 26/@r;
  text-align: center;
  background-color: #eeeeee !important;
  border-radius: 5px 5px 0 0 !important;
}
