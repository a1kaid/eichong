function toLoadLevelListCard() {
    $.ajax({
        type: "post",
        url: basePath + getLevelList,
        async: true,
        data: {
            //cpyId: 1
            cpyId:ucCpyId
        },
        success: function (data) {
            var levelHtml = ' <option value="">请选择</option>';
            var data = data.dataObject;
