    }
    if (!rateInfoIdValue) {
        $('#rateInfoId').focus();
        return false;
    }
    if (!addressValue) {
        $('#address').focus();
        return false;
    }
    if (!longitudeValue) {
        $('#longitude').focus();
        return false;
    }
    if (!latitudeValue) {
        $('#latitude').focus();
        return false;
    }
    if (dropDownList($('#province')) == false) {
        layer.tips('请选择省！', '#province', {
