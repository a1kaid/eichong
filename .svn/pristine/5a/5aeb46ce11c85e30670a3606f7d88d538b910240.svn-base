@r:50rem;
a,
input,
button {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
input,
button {
  -webkit-appearance: none;
  border-radius: 0;
}
body {
  margin:0;
  -webkit-user-select:auto;
  background-color: #ebebeb;
}
body * {
  -webkit-user-select:auto;
  font-family:  "微软雅黑";
}
body {
  -webkit-text-size-adjust: 100%;
  font-family:  "微软雅黑";
}
*{
  padding: 0;
  margin: 0;
}
.chargingCar{
  width: 750/@r;
  min-height: 614/@r;
  background-color: #ff7d00;
  .chargingStatus{
      width: 750/@r;
      height: 160/@r;
      line-height: 160/@r;
      font-size: 36/@r;
      text-align: center;
      color: #FFFFFF;
  }
  .car{
    width: 750/@r;
    height: 136/@r;
    text-align: center;
    margin-top: 50/@r;
    margin-bottom: 70/@r;
    img{
      display: block;
      width: 400/@r;
      height: 136/@r;
      margin: 0 auto;
    }
  }
  .statusValue{
    width: 750/@r;
    height: 186/@r;
    text-align: center;
    color: #FFFFFF;
    font-size: 83.38/@r;
  }
}
.chargingDetail{
  width: 600/@r;
  min-width:100/@r;
  padding: 154/@r 98/@r 144/@r 52/@r;
  .detailList{
    list-style: none;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    li{
      border-right: 1px solid #c2c2c2;
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding-right: 70/@r;
      .paramValue{
        display: block;
        font-size: 40/@r;
        color: #333333;
      }
      .paramTip{
        display: block;
        font-size: 28/@r;
        color: #888888;
      }
    }
    li:nth-child(1){
      padding-right: 44/@r;
    };
    li:nth-child(2){
      padding: 0 64/@r;
    };
    li:last-child{
      border:0;
      padding-right: 0;
      padding-left: 44/@r;
    }
  }
}
.endBlock{
  width:670/@r;
  min-height: 50/@r;
  padding: 0 40/@r;
  .tip{
      height: 74/@r;
      line-height: 74/@r;
      font-size: 24/@r;
      color: #888888;
      text-align: center;
  }
  .doneBtn{
    width: 670/@r;
    height: 90/@r;
    background: #ff7d00;
    color: #FFFFFF;
    line-height: 90/@r;
    text-align: center;
    font-size: 36/@r;
    border-radius: 8/@r;
  }
}