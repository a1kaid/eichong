function selectMenu(){
    var setting = {
        treeId:'#treeDemo',
        check: {
            enable: true
        },
        data: {
            simpleData: {
                enable: true
            },
            key:{
                checked: "isSelected",
                children: "menuList",
                name: "contents",
                url: "imageUrl"
            }

        },
        callback: {
            onClick: zTreeOnClick
        }
    };
    var zNodes="";
    getZNodes();
    function getZNodes(){
        $.ajax({
            type:"post",
            url:basePath+getMeunTreeUrl,
            async:true,
            success:function(req){
                if(req.success==true){
                    zNodes=req.dataObject;
                    zNodes.open=true;
                    $.fn.zTree.init($("#treeDemo"), setting, zNodes);
                }
            }
        });
    }
    //点击每个节点获得每个节点的id和name
    function zTreeOnClick(event, treeId, zNodes){
        $('input[name=parentMenuId]').val(zNodes.menuId);
        $('#parentMenuInput').val(zNodes.contents);
        layer.closeAll();
    }
}