@charset "utf-8";
/*common*/
.container-statistics{
	height: 100%;
	margin-top: 22px;
	padding: 30px;
	padding-top: 20px;
	font-size: 12px;
	font-family: "微软雅黑";
	/*background: #EBCCCC;*/
}
.container-statistics .header .title{
	display: inline-block;
	width: 80px;
	height: 40px;
	line-height: 40px;
	font-size: 14px;
	color: #000000;
	/*background: #CCCCCC;*/
}
.container-statistics .header .selectInput{
	display: inline-block;
	/*background: #FF0000;*/
}
.container-statistics .header .selectInput select,
.container-statistics .header .selectInput input{
	width: 100px;
	height: 26px;
	/*margin-left: 20px;*/
	color: #999999;
	font-size: 12px;
	border: 1px solid #E5E5E5;
	border-radius: 4px;
	appearance:none;
	-moz-appearance:none;
	-webkit-appearance:none;
	background: url(../../images/triangle_right_114px_1189854_easyicon.net-down-8.png) no-repeat 90% 8px !important;
}
.container-statistics .header .selectInput .check{
	display: inline-block;
	width: 48px;
	height: 26px;
	background: #FF7D00;
	color: #FFFFFF;
	border-radius: 4px;
	margin-left: 20px;
	text-align: center;
	line-height: 22px;
	cursor: pointer;
	font-size: 12px;
}
.container-statistics .unitData{
	width: 100%;
	height: 118px;
	margin: 20px 0;
	border: 1px solid #E1E1E1;
}
.container-statistics .unitData .unitBlock{
	float: left;
	width: 33%;
	height: 100%;
	border-right: 1px solid #E1E1E1;
}
.container-statistics  .unitData .realtimeBlock{
	float: left;
	width: 25%;
	height: 100%;
	border-right: 1px solid #E1E1E1;
}

.container-statistics  .unitData .faultDataBlock{
	float: left;
	width: 10%;
	height: 100%;
	border-right: 1px solid #E1E1E1;
}
.container-statistics .unitData .unitBlock:last-child{
	border: 0;
}
.container-statistics .unitData .realtimeBlock:last-child{
	border: 0;
}
.container-statistics .unitData .faultDataBlock:last-child{
	border: 0;
}
.container-statistics .unitData .unitBlock .unitDataTitle,
.container-statistics .unitData .realtimeBlock .unitDataTitle,
.container-statistics .unitData .faultDataBlock .unitDataTitle{
	width: 100%;
	/*height: 20px;*/
	text-align: center;
	margin-top: 32px;
	font-size: 14px;
	color: #484848;
}
.container-statistics .unitData .unitBlock  .unitDataValue,
.container-statistics .unitData .realtimeBlock  .unitDataValue,
.container-statistics .unitData .faultDataBlock  .unitDataValue{
	width: 100%;
	text-align: center;
	margin-top: 10px;
	font-size: 30px;
	color: #484848;
}
.container-statistics .main{
	width: 100%;
	min-height: 118px;
	margin: 20px 0;
	border: 1px solid #E1E1E1;
	padding-bottom: 30px;
}
.container-statistics .main .mainTab{
	width: 100%;
	height: 42px;
}
.container-statistics .main .mainTabContent:first-child{
	width: 100%;
	min-height: 50px;
	padding: 20px 20px;
	padding-bottom: 0;
	/*background: #0000FF;*/
}
.container-statistics .main .mainTabContent:last-child{
	width: 100%;
	min-height: 50px;
	padding: 20px 20px;
	padding-top: 0;
	/*background: #0000FF;*/
}
.container-statistics .main .mainTabContent .detaiData{
	width: 100%;
	min-height: 90px;
	/*background: #F0AD4E;*/
}
.container-statistics .main .mainTabContent .detaiData .detailDateTitle{
	width: 100%;
	font-size: 14px;
	color: #484848;
	padding: 0 20px 18px 18px;
	background: url(../../images/circle.png) no-repeat 0 4px;
}
.container-statistics .main .mainTabContent .mainTabBlock{
	width: 100%;
	min-height: 400px;
	background: #C0C0C0;
}
.container-statistics .main .mainTab span{
	float: left;
	width: 200px;
	height: auto;
	line-height: 42px;
	text-align: center;
	background: #e9e9e9;
	cursor: pointer;
	font-size: 12px;
	color: #484848;
}

.container-statistics .main .mainTab .active{
	display: inline-block;
	width: 200px;
	height: auto;
	line-height: 42px;
	text-align: center;
	background: #ff7e01;
	cursor: pointer;
	font-size: 12px;
	color: #FFFFFF;
}
.pagination {
    width: 100%;
    height: 50px;
    margin: 0;
    padding: 0;
    background: #FFFFFF;
    padding-top: 16px;
    bottom: 0;
    left: 0;
    position: static;
}
/*动态表格*/
.myTable tbody tr td:first-Child{
	cursor: pointer;
	width: 300px;
}
