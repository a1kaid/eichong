a,
input,
button {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
input,
button {
  -webkit-appearance: none;
  border-radius: 0;
}
body {
  margin: 0;
  -webkit-user-select: auto;
  background-color: #ebebeb;
}
body * {
  -webkit-user-select: auto;
  font-family: "微软雅黑";
}
body {
  -webkit-text-size-adjust: 100%;
  font-family: "微软雅黑";
}
* {
  padding: 0;
  margin: 0;
}
.main {
  width: 13.4rem;
  min-height: 2rem;
  padding: 1.2rem 0.8rem;
}
.main .intro .chargeTitle {
  font-size: 0.64rem;
  color: #333333;
}
.main .intro .chargeContent {
  font-size: 0.56rem;
  color: #666666;
  margin: 0.88rem 0;
}
.main .chargeStep p {
  height: 1.36rem;
  width: 13.4rem;
  font-size: 0.56rem;
  color: #333333;
}
.main .chargeStep img {
  display: block;
  width: 13.4rem;
  height: 5rem;
  margin: 0 auto 0.8rem;
}
.main .tip {
  width: 13.4rem;
  height: 2rem;
  font-size: 0.52rem;
  color: #888888;
}
