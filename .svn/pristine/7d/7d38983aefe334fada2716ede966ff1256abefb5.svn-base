$('body').off('blur', '#levelSeq').on('blur', '#levelSeq', function () {
    checkLevelSeq($('#levelSeq').val())
});

$('body').off('blur', '#levelName').on('blur', '#levelName', function () {
    checkLevelName($('#levelName').val())
});

function checkLevelSeq(levelSeq) {
    var cpyId = $('#cpyCompanyName').attr('data-value');
    if (!cpyId) {
        $('#cpyNumTip').html('渠道不能为空');
        return false;
    } else {
        $('#cpyNumTip').html('');
    }

    if (!levelSeq) {
        $('#levelSeqTip').html('等级序列不能为空');
        return false;
    }
    if (checkIsNum(levelSeq)) {
        $('#levelSeqTip').html('等级序列只能是数字');
        $('#levelSeq').val('');
        $('#levelSeq').focus();
        return false;
    }

    var obj = {
        cpyId: cpyId,
        levelSeq: levelSeq
    };

    $.ajax({
        type: "post",
        url: basePath + checkLevelSeqUrl,
        async: true,
        data: obj,
        success: function (data) {
            if (data.success == false) {
                $('#levelSeqTip').html('等级序列已存在，请重新输入！');
                $('#levelSeq').val('');
                $('#levelSeq').focus();
                return false;
            }
        }
    });

    $('#levelSeqTip').html('');
    return true;
}

function checkLevelName(levelName) {
    var cpyId = $('#cpyCompanyName').attr('data-value');
    if (!cpyId) {
        $('#cpyNumTip').html('渠道不能为空');
        return false;
    } else {
        $('#cpyNumTip').html('');
    }

    if (!levelName) {
        $('#levelNameTip').html('等级名称不能为空');
        return false;
    }

    var obj = {
        cpyId: cpyId,
        levelName: levelName
    };

    $.ajax({
        type: "post",
        url: basePath + checkLevelNameUrl,
        async: true,
        data: obj,
        success: function (data) {
            if (data.success == false) {
                $('#levelNameTip').html('等级名称已存在，请重新输入！');
                $('#levelName').val('');
                $('#levelName').focus();
                return false;
            }
        }
    });

    $('#levelNameTip').html('');
    return true;
}

function checkIsNum(str) {
    var re = /^[0-9]*$/;
    return !re.test(str);
}

//将数据提交到后台处理
$('#saveBtn').on('click',function(){
    var cpyName = $('#cpyCompanyName').attr('data-value');
    var levelSeqValue = $('#levelSeq').val();
    var levelNameValue = $('#levelName').val();
    if(!cpyName){
        $('#cpyNumTip').html('渠道不能为空');
        return false;
    }
    if(!levelSeqValue){
        $('#levelSeqTip').html('等级序列不能为空');
        return false;
    }
    if(!levelNameValue){
        $('#levelNameTip').html('等级名称不能为空');
        return false;
    }
    saveLevel();
})
function saveLevel() {
    var cpyId = $('#cpyCompanyName').attr('data-value');
    var levelName = $('#levelName').val();
    var levelSeq = $('#levelSeq').val();
    var isDefault = $('#isDefault').attr('data-value');
    var obj = {
        cpyId: cpyId,
        levelName: levelName,
        levelSeq: levelSeq,
        isDefault: isDefault
    };
    $.ajax({
        type: "post",
        url: basePath + addLevelUrl,
        async: true,
        data: obj,
        success: function (data) {
            if (data.success == true) {
                layer.closeAll();
                layer.open({
                    type: 1,
                    offset: '100px',
                    title: ["提示", "font-size:12px;text-align:left;padding-left:20px;"],
                    shadeClose: false,
                    closeBtn: 1,
                    area: ['310px', '160px'],//宽高
                    content: '保存成功！',
                    btn: ["确定"],
                    yes:function(){
                        window.location.href='level.html';
                    }
                });
            } else {
                if(data.status==8888){
                    layer.closeAll();
                    layer.open({
                        type: 1,
                        offset: '100px',
                        title: ["确认", "font-size:12px;text-align:left;padding-left:20px;"],
                        shadeClose: false,
                        closeBtn: 1,
                        area: ['310px', '160px'],//宽高
                        content: data.msg,
                        btn: ["确定", "取消"],
                        yes:function(){
                            layer.closeAll();
                            setYesDefault();
                        },
                        btn2: function(index, layero){
                            layer.closeAll();
                            setNoDefault();
                        },
                        cancel: function (index, layero) {
                            layer.closeAll();
                        }
                    });
                }else{
                    layer.closeAll();
                    layer.open({
                        type: 1,
                        offset: '100px',
                        title: ["提示", "font-size:12px;text-align:left;padding-left:20px;"],
                        shadeClose: false,
                        closeBtn: 1,
                        area: ['310px', '160px'],//宽高
                        content: data.msg,
                        time: 3000,
                        btn: ["确定"]

                    });
                }

            }
        }
    });
}

